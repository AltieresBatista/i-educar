	<queryString>
		<![CDATA[SELECT count(aluno_id),
       escola.cod_escola,
       (SELECT COALESCE((SELECT COALESCE (fcn_upper(ps.nome),fcn_upper(juridica.fantasia))
          FROM cadastro.pessoa ps,
               cadastro.juridica
         WHERE escola.ref_idpes = juridica.idpes AND
               juridica.idpes = ps.idpes AND
               ps.idpes = escola.ref_idpes),(SELECT nm_escola FROM pmieducar.escola_complemento where ref_cod_escola = escola.cod_escola))) AS nm_escola,
 (SELECT round(100.0 / count(aluno_id),2)
        FROM modules.transporte_aluno,
       pmieducar.aluno,
       pmieducar.matricula,
       pmieducar.escola
 WHERE transporte_aluno.aluno_id = aluno.cod_aluno AND
       aluno.cod_aluno = matricula.ref_cod_aluno AND
       matricula.ativo = 1 AND
       matricula.ano = 2011 AND
       matricula.ref_ref_cod_escola = escola.cod_escola) * count(aluno_id)
as percentual

  FROM modules.transporte_aluno,
       pmieducar.aluno,
       pmieducar.matricula,
       pmieducar.escola
 WHERE transporte_aluno.aluno_id = aluno.cod_aluno AND
       aluno.cod_aluno = matricula.ref_cod_aluno AND
       matricula.ativo = 1 AND
       matricula.ano = $P{ano} AND
       matricula.ref_ref_cod_escola = escola.cod_escola AND
       escola.ref_cod_instituicao = $P{instituicao}

group by escola.cod_escola, nm_escola

Order by nm_escola]]>
	</queryString>
